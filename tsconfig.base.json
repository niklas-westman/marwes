{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",

    "strict": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "useUnknownInCatchVariables": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "baseUrl": ".",
    "paths": {
      "@marwes/core": ["./packages/core/src/index.ts"],
      "@marwes/presets": ["./packages/presets/src/index.ts"],
      "@marwes/presets/firstEdition": ["./packages/presets/src/firstEdition/index.ts"],
      "@marwes/react": ["./packages/react/src/index.ts"]
    },

    "types": []
  }
}
