{
  "name": "marwes",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "prepare": "lefthook install",
    "dev:packages": "pnpm -r --parallel --filter \"./packages/*\" dev",
    "dev:playground": "pnpm --filter \"./apps/playground-react\" dev",
    "dev:storybook": "pnpm --filter \"./apps/storybook-react\" storybook",
    "dev:storybook:react": "pnpm --filter \"./apps/storybook-react\" storybook",
    "dev:storybook:vue": "pnpm --filter \"./apps/storybook-vue\" storybook",
    "dev": "pnpm dev:packages & pnpm dev:playground",
    "build:packages": "pnpm -r --filter \"./packages/*\" build",
    "build:apps": "pnpm -r --filter \"./apps/*\" build",
    "build": "pnpm build:packages && pnpm build:apps",
    "typecheck": "pnpm -r typecheck",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check .",
    "test": "pnpm -r test",
    "test:packages": "pnpm test:core && pnpm test:presets && pnpm test:react && pnpm test:vue",
    "test:packages:allure": "MARWES_ALLURE=1 pnpm test:packages",
    "test:core": "pnpm --filter @marwes-ui/core test",
    "test:presets": "pnpm --filter @marwes-ui/presets test",
    "test:react": "pnpm --filter @marwes-ui/react test",
    "test:vue": "pnpm --filter @marwes-ui/vue test",
    "allure:clean": "rimraf .allure",
    "allure:generate": "pnpm exec allure generate .allure/results --output .allure/report",
    "allure:generate:ci": "pnpm exec allure generate .allure/results --output .allure/report",
    "allure:open": "pnpm exec allure open .allure/report",
    "test:report": "pnpm allure:clean && pnpm test:packages:allure && pnpm allure:generate",
    "test:typecheck:contracts": "tsc -p tests/tsconfig.json --noEmit",
    "test:typecheck:core": "pnpm --filter @marwes-ui/core test:typecheck",
    "test:typecheck:presets": "pnpm --filter @marwes-ui/presets test:typecheck",
    "test:typecheck:react": "pnpm --filter @marwes-ui/react test:typecheck",
    "test:typecheck:vue": "pnpm --filter @marwes-ui/vue test:typecheck",
    "test:typecheck:packages": "pnpm test:typecheck:contracts && pnpm test:typecheck:core && pnpm test:typecheck:presets && pnpm test:typecheck:react && pnpm test:typecheck:vue",
    "clean": "pnpm -r clean || true",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.10",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitest/runner": "^4.0.18",
    "allure": "3.0.0-beta.23",
    "allure-vitest": "^3.4.1",
    "jsdom": "^26.1.0",
    "lefthook": "^2.1.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.4",
    "rimraf": "^6.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^4.0.18"
  }
}
